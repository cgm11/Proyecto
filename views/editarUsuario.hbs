<div class="container">
{{>heaOne}}
{{>navCoordinador}}
<br>
<h4>
    Bienvenido a la pagina para editar los usuarios
</h4>
<br>
<b>{{mensajeEditarUsuario}}</b>
{{{listarUsuarios listado}}}

<form action="/editarUsuario" method="POST" enctype="multipart/form-data">
    <br>
    <div class="form-group">
        <div class="col">
            <label>Cedula</label>
            <input type="number" class="form-control" placeholder="Id usuario" name="cedula" required> 
        </div>
        <div class="col">
            <label>Nombre</label>
            <input type="text" class="form-control" placeholder="Nombre nuevo" name="nombre">
        </div>
    </div>
    <br>
    <div class="form-group">
        <div class="col">
            <label>Rol</label>
            <select class="form-control" name="rol">
                <option>-</option>
                <option>aspirante</option>
                <option>docente</option>
            </select>
        </div>
        <div class="col">
            <label>telefono</label>
            <input type="number" class="form-control" placeholder="Telefono" name="telefono">
        </div>
    </div>
    <br>
    <div class="form-group">
        <div class="col">
            <label>Correo</label>
            <input type="text" class="form-control" placeholder="Correo" name="correo"></input>
        </div>
        <div class="col">
        <label>Foto de perfil</label>
        <input type="file" class="form-control" name="archivoUpdate" accept="image/*">
        </div>  
    </div>
    <div class="form-group">
        <br><button>Editar</button>
    </div> 
    {{>footer}}
</form>

