<div class="container">
{{>header}}

<br>
<h3>
    Página de registro
</h3>
<form action="/listaCursos" method="post">
    <div class="form-group">
        <br><label>Documento de identidad</label>
        <input type="number" class="form-control" name="documento" required>
    </div> 
    <div class="form-group">
        <br><label>Nombre</label>
        <input type="text" class="form-control" name="nombre" required>
    </div>    
    <div class="form-group">
        <br><label>Correo</label>
        <input type="email" class="form-control" placeholder="user@correo.com" name="correo" required>
    </div>
    <div class="form-group">
        <br><label>Teléfono</label>
        <input type="number" class="form-control" name="telefono" required>
    </div> 
    <div class="form-group">
        <br><label>Usuario</label>
        <input type="text" class="form-control" placeholder="user" name="nombreUser" required>
    </div>
    <div class="form-group">
        <br><label>Constraseña</label>
        <input type="password" class="form-control" name="password" required>
    </div>      
    <div class="form-group">
        <br><button>Ingresar</button>
    </div>
</form>
</div>


